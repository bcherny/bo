body
	background #111 url("../img/stripe.png") 0 0
	font 13px "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif

button
	background -webkit-linear-gradient(-90deg, #eee, #ddd)
	border-radius 3px
	display block
	font-weight bold
	margin 0 auto
	padding 20px 60px
	-webkit-appearance none

	&:active
		background -webkit-linear-gradient(-90deg, #ccc, #ddd)
		box-shadow inset 0 5px 5px rgba(0,0,0,.1)

h1
	margin 100px 0 20px
	text-align center

p
	color #666
	margin 0 auto 30px
	width 184px

[data-bo-pane="second"]

	h1
		margin-top 30px

#frame
	background #fff
	bottom 80px
	left 0
	overflow hidden
	position absolute
	right 0
	top 20px