$pane-slide-duration = .2s
$pane-slide-transition = linear

*
	border 0
	margin 0
	padding 0
	text-rendering optimizelegibility
	user-select none
	-webkit-tap-highlight-color rgba(0,0,0,0)
	-webkit-touch-callout none
	-webkit-user-select none

html
body
	height 100%
	width 100%

[data-bo-pane]
	bottom 0
	display none
	left 0
	margin auto
	position absolute
	right 0
	top 0
	-webkit-transform translate3d(0, 0, 0)

	&.left
		-webkit-transform translate3d(-100%, 0, 0)

	&.right
		-webkit-transform translate3d(100%, 0, 0)

	&.animate
		-webkit-transition -webkit-transform $pane-slide-duration $pane-slide-transition